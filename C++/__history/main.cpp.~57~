void __fastcall TForm1::ONClick(TObject *Sender)
{
	for (int i = 0; i < 512; i++) {
	dmxBlock[i]=0;
	}
	dmxBlock[0]=0xFF;
	dmxBlock[1]=0x00;
	dmxBlock[2]=0x00;
	dmxBlock[3]=0x00;
	dmxBlock[4]=0xFF;
	dmxBlock[5]=0xFF;
	Connect->Color = clLime;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::OFFClick(TObject *Sender)
{
	for (int i = 0; i < 512; i++) {
		dmxBlock[i]=0;
	}
	dmxBlock[0]=0x00;
	dmxBlock[1]=0x00;
	dmxBlock[2]=0x00;
	dmxBlock[3]=0x00;
	dmxBlock[4]=0x00;
	dmxBlock[5]=0x00;
     Connect->Color = clRed;

}
