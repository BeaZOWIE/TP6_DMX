void __fastcall TForm1::StroboscopeClick(TObject *Sender)
{
	for (int i = 0; i < 512; i++) {
	dmxBlock[i]=0;
	}
	dmxBlock[0]=0xD7;
	dmxBlock[1]=0xFF;
	dmxBlock[2]=0xFF;
	dmxBlock[3]=0xFF;
	dmxBlock[4]=0xFF;
	dmxBlock[5]=0xFF;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::DMXServerConnect(TIdContext *AContext)
{
	LMessage->Items->Add("L'adresse IP du client :");
	LMessage->Items->Add(AContext->Binding->PeerIP);
	LMessage->Items->Add("Le Port du client est :");
	LMessage->Items->Add(AContext->Binding->PeerPort);

	AContext->Connection->IOHandler->WriteLn("Server Connected");
}
//---------------------------------------------------------------------------

void __fastcall TForm1::ServerONClick(TObject *Sender)
{
 Labeltcp->Caption="Le serveur est en cours d'exécution";
 DMXServer->Active= true;
 LMessage->Visible=true;
 ServerON->Visible=false;
 ServerOFF->Visible=true;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::DMXServerExecute(TIdContext *AContext)
{
	Labeltcp->Caption="Le serveur a reçu";
	Labeltcp->Caption="Le serveur est en cours d'exécution";

//	String s = AContext->Connection->IOHandler->ReadLn();
//	if (!s.IsEmpty()) {
//		LMessage->Items->Add("Client: " + s);
//		AContext->Connection->IOHandler->WriteLn("Got it! (" + s + ")");
//		LMessage->Items->Add("We say: Got it! (" + s + ")");
//	}

	UnicodeString text;
	text = AContext->Connection->IOHandler->ReadLn();
	//long length = AContext->Connection->IOHandler->ReadLongInt();
	//AContext->Connection->IOHandler->ReadBytes(ABuffer, length, false);



	AContext->Connection->Disconnect();

	LMessage->Items->Add(text);


}
//---------------------------------------------------------------------------

void __fastcall TForm1::ServerOFFClick(TObject *Sender)
{
	DMXServer->Active=false;
	LMessage->Visible =false;
	ServerOFF->Visible=false;
	ServerON->Visible=true;
	Labeltcp->Caption="Le serveur est éteint";
}
